  <h1>Blog</h1>
  <p><strong>Total posts:</strong> {posts.length}</p>
  <ul>
    {posts.map(({ slug, data }) => (
      <li>
        <a href={`/blog/${slug}/`}>{data.title} â€” {String(data.date)}</a>
      </li>
    ))}
  </ul>
</BaseLayout>
