---
const { title = "My Site", description = "" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <style>
      body { font-family: system-ui, sans-serif; margin: 0; padding: 0; }
      header, footer { padding: 1rem; border-bottom: 1px solid #ddd; }
      footer { border-top: 1px solid #eee; border-bottom: none; text-align: center; }
      header nav a { margin-right: 1rem; text-decoration: none; color: #333; }
      header nav a:hover { text-decoration: underline; }
      main { padding: 1.5rem; }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/news">News</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <small>Â© {new Date().getFullYear()} astro-tina-demo</small>
    </footer>
  </body>
</html>
